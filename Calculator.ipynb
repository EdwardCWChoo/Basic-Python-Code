    "## Start your code here.\n",
    "# --- prompt user inputs and perform addition. ---\n",
    "def addition():\n",
    "    global total\n",
    "    global items\n",
    "    user_first_input = input('Enter the augend: ')\n",
    "    total = float(user_first_input)\n",
    "    items = user_first_input\n",
    "    while True:\n",
    "        user_input = input('Enter addend or \"Q\" to quit: ')\n",
    "        if user_input.upper() == \"Q\":\n",
    "            break\n",
    "        elif user_input.isalpha():\n",
    "            print(user_input, \" is invalid. Please try again\")\n",
    "        elif user_input.isdigit() or float(user_input):\n",
    "            items = items + \" + \" + user_input\n",
    "            total = total + float(user_input)\n",
    "        else:\n",
    "            print(user_input, \" is invalid. Please try again\")\n",
    "\n",
